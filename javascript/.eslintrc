{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier", "jest"],
  "rules": {
    "prefer-const": 0,
    "consistent-return": "off",
    "no-plusplus": "off",
    "no-console": "off",
    "prettier/prettier": ["error"],
    "no-param-reassign": 0,
    "import/prefer-default-export": 0,
    "no-use-before-define": ["error", { "functions": false }],
    "no-return-assign": 0
  },
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  }
}
